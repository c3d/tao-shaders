import Sparks

sparks_effect ->
    texture ""
    // Color of the sparks
    color 0.0, 0.7, 1.0, 1.0
    // Color of the font
    sparks_color 0.1, 0.1, 0.1, 1.0
    // Apply sparks effect
    sparks page_time * 0.3, 1000, 1000
    // Draw shape
    rotatex time * 20
    torus 0, 0, 0, 800, 0.25

sparks_effect
